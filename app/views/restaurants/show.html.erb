<div class="container">
  <h1>餐廳資料</h1>

  <table class="table table-striped">
    <tbody>
      <tr>
        <th scope="col">餐廳名稱</th>
        <td><%= @restaurant.title %></td>
      </tr>
      <tr>
        <th scope="col">電話</th>
        <td><%= @restaurant.tel %></td>
      </tr>
      <tr>
        <th scope="col">Email</th>
        <td><%= @restaurant.email %></td>
      </tr>
      <tr>
        <th scope="col">地址</th>
        <td><%= @restaurant.address %></td>
      </tr>
      <tr>
        <th scope="col">描述</th>
        <td><%= @restaurant.description %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to "回餐廳列表", restaurants_path, class: "btn btn-outline-dark" %>
  <hr>
  <h2>留言</h2>
  <%= form_for(@comment, url: restaurant_comments_path(@restaurant), remote: true) do |form| %>
    <div class="row mb-3">
      <div class="col">
        
        <%= form.text_area :content %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col">
        <%= form.submit "發送留言", class: "btn btn-dark" %>
      </div>
    </div>
    
  <% end %>

  <ul id="comment_area">
  <% @comments.each do |comment| %>
    <li><%= comment.content %></li>
  <% end %>
  </ul>
</div>

